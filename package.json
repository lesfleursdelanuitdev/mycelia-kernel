{
  "name": "mycelia-kernel",
  "version": "1.1.0",
  "description": "Production-ready message-driven architecture framework with composable hooks, built-in security, and multi-backend support",
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "lesfleursdelanuitdev",
    "url": "https://github.com/lesfleursdelanuitdev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lesfleursdelanuitdev/mycelia-kernel.git"
  },
  "homepage": "https://github.com/lesfleursdelanuitdev/mycelia-kernel#readme",
  "bugs": {
    "url": "https://github.com/lesfleursdelanuitdev/mycelia-kernel/issues"
  },
  "keywords": [
    "message-driven",
    "architecture",
    "framework",
    "microservices",
    "hooks",
    "plugin-system",
    "message-queue",
    "websocket",
    "storage",
    "sqlite",
    "indexeddb",
    "security",
    "observability",
    "distributed-systems"
  ],
  "main": "./src/messages/v2/index.js",
  "exports": {
    ".": "./src/messages/v2/index.js",
    "./hooks/*": "./src/messages/v2/hooks/*/index.js",
    "./models/*": "./src/messages/v2/models/*/index.js",
    "./utils/*": "./src/messages/v2/utils/*/index.js"
  },
  "files": [
    "src/messages/",
    "cli/",
    "docs/",
    "README.md",
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "LICENSE"
  ],
  "bin": {
    "mycelia-kernel": "./cli/bin/mycelia-kernel.js"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "bench": "node --expose-gc src/messages/v2/benchmarks/framework-performance.bench.js",
    "bench:queue": "node --expose-gc src/messages/v2/benchmarks/queue-performance.bench.js",
    "bench:pool": "node --expose-gc src/messages/v2/benchmarks/message-pool-performance.bench.js",
    "bench:integrated": "node --expose-gc src/messages/v2/benchmarks/pool-integration-simple.bench.js",
    "bench:stress": "node --expose-gc src/messages/v2/benchmarks/pool-stress-test.bench.js",
    "bench:stress:full": "node --expose-gc src/messages/v2/benchmarks/pool-stress-with-processing.bench.js",
    "bench:stress:sustained": "node --expose-gc src/messages/v2/benchmarks/pool-stress-sustained.bench.js",
    "bench:all": "npm run bench:queue && npm run bench:pool && npm run bench:integrated"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "commander": "^12.1.0",
    "glob": "^11.0.0"
  },
  "peerDependencies": {
    "@hono/node-server": "^1.19.0",
    "axios": "^1.13.0",
    "express": "^4.21.0",
    "fastify": "^4.29.0",
    "hono": "^4.6.0",
    "ws": "^8.18.0"
  },
  "peerDependenciesMeta": {
    "@hono/node-server": {
      "optional": true
    },
    "axios": {
      "optional": true
    },
    "express": {
      "optional": true
    },
    "fastify": {
      "optional": true
    },
    "hono": {
      "optional": true
    },
    "ws": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

